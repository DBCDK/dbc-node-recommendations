{
  "name": "dbc-node-recommendations",
  "version": "1.0.1",
  "description": "Client for the DBC Recommendation service",
  "main": "dist/Recommendation.client.js",
  "scripts": {
    "lint": "eslint ./src",
    "lint:checkstyle": "eslint ./src  -o report.xml -f checkstyle",
    "test": "mocha --compilers js:babel/register src/__tests__ -R mocha-jenkins-reporter",
    "test:junit": "npm run test",
    "test:watch": "mocha --compilers js:babel/register src/__tests__ -w",
    "build": "rm -rf dist && babel ./src -d dist --ignore __tests__",
    "build:watch": "rm -rf dist && babel ./src --watch -d dist --ignore __tests__"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DBCDK/dbc-node-recommendations#develop"
  },
  "author": "dbcdk",
  "license": "GPL-3.0",
  "dependencies": {
    "es6-promise": "^2.1.1",
    "lodash": "3.9.3",
    "node-rest-client": "^1.5.1"
  },
  "devDependencies": {
    "babel": "^5.5.6",
    "babel-core": "^5.5.6",
    "babel-eslint": "^3.1.15",
    "chai": "^3.0.0",
    "eslint": "^0.21.0",
    "eslint-loader": "^0.14.0",
    "eslint-plugin-react": "^2.5.2",
    "mocha": "^2.2.5",
    "mocha-jenkins-reporter": "^0.1.9",
    "mocha-junit-reporter": "^1.4.0"
  }
}
